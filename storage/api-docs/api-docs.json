                                ],
                                "properties": {
                                    "kode": {
                                        "type": "string",
                                        "example": "A001"
                                    },
                                    "nama": {
                                        "type": "string",
                                        "example": "Laptop Asus"
                                    },
                                    "kategori_alat_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "kondisi": {
                                        "type": "string",
                                        "example": "baik"
                                    },
                                    "deskripsi": {
                                        "type": "string",
                                        "example": "Laptop untuk keperluan desain"
                                    },
                                    "lokasi": {
                                        "type": "string",
                                        "example": "Lab Komputer"
                                    },
                                    "foto": {
                                        "type": "string",
                                        "format": "binary",
                                        "example": "foto_alat.jpg"
                                    },
                                    "stok": {
                                        "type": "integer",
                                        "example": 10
